<div class="form-horizontal">
<%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
<div class="form-group">
	<label class="col-sm-2 control-label" for="InputName">名前：</label>
	<div class="col-sm-7">
			 <%= f.text_field :name, class:"form-control", id:"inputName", placeholder: "お名前" %>
    </div>
</div>

<div class="form-group">
	<label class="col-sm-2 control-label" for="InputName">年齢：</label>
	<div class="col-sm-7">
			 <%= f.text_field :age, class:"form-control", id:"inputName", placeholder: "年齢" %>
    </div>
</div>

<div class="form-group">
	<label class="col-sm-2 control-label" for="InputText">内容：</label>
	<div class="col-sm-7">
	    <%= f.text_area :body, rows: "3", class: "form-control", id:"InputTextarea", placeholder: "ご質問などご自由にお書きください。" %>
	</div>
</div>

<div class="form-group">
        <%= f.submit class: "btn-sm btn-primary center-block" %>
</div>

</div>

<% end %>