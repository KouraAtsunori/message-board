<div class="panel panel-default">
    <div class="panel-heading">
        <p class="text-info text-left">
            <h4>＜メッセージ一覧＞</h4>
        </p>
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-success"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<div class="form-horizontal">
<%= form_for(@message) do |f| %>
<div class="form-group">
	<label class="col-sm-2 control-label" for="InputName">名前：</label>
	<div class="col-sm-7">
			 <%= f.text_field :name, class:"form-control", id:"inputName", placeholder: "お名前" %>
    </div>
</div>

<div class="form-group">
	<label class="col-sm-2 control-label" for="InputText">その他</label>
	<div class="col-sm-7">
	    <%= f.text_area :body, rows: "3", class: "form-control", id:"InputTextarea", placeholder: "ご質問などご自由にお書きください。" %>
	</div>
</div>

<div class="form-group">
        <%= f.submit class: "btn-sm btn-primary center-block" %>
</div>

</div>

<% end %>